<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_add_new_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:drawableStart="@drawable/ic_add_person"
        android:drawablePadding="16dp"
        android:text="Add a new profile"
        android:textSize="16sp"
        android:background="?attr/selectableItemBackground"/>

    <TextView
        android:id="@+id/tv_import_contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:drawableStart="@drawable/ic_import_contacts"
        android:drawablePadding="16dp"
        android:text="Import from contacts"
        android:textSize="16sp"
        android:background="?attr/selectableItemBackground"/>

</LinearLayout> 