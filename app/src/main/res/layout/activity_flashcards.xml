<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- Main flashcard content -->
    <LinearLayout
        android:id="@+id/flashcard_content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Progress -->
        <TextView
            android:id="@+id/flashcard_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textSize="14sp"
            android:textColor="@color/colorPrimaryDark" />

        <!-- Flashcard image (front/back trigger) -->
        <ImageView
            android:id="@+id/flashcard_image"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:scaleType="centerCrop"
            android:src="@drawable/blank_profile_round"
            android:contentDescription="@string/image_of_the_connection" />

        <!-- Name shown on back of card -->
        <TextView
            android:id="@+id/flashcard_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <!-- Additional details shown on back of card -->
        <TextView
            android:id="@+id/flashcard_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Hint text above CTA -->
    <TextView
        android:id="@+id/flashcard_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/flashcards_hint"
        android:textSize="14sp"
        android:textColor="@color/colorPrimaryDark" />

    <!-- CTA styled similar to other screens, at bottom above ad -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/flashcard_next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/flashcards_next"
        android:textColor="@color/text_or_icons"
        android:backgroundTint="@color/colorPrimary" />

    <!-- Ad below CTA -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        ads:adSize="BANNER"
        ads:adUnitId="@string/ad_unit_id_banner" />

</LinearLayout>
